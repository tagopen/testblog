extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}
block header
  div.logo
    h1
      a(href=locals.url)= locals.name
    p.description= locals.description
  #cssmenu.align-center
    #menu-button Menu
    ul.piktonav.nine.columns
      each item in locals.nav
        li
          a(href!= item.url)
            span.pikto 
            span.txt!= item.name
block content
  section.container
    .wrap-container
      #main-content
        .wrap-content
          .row
            .single-post.zerogrid
              .row.wrap-post!= typogr(page.html).typogrify()
